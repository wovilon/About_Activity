<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wovilon.about_activity.MainActivity">

    <Button
        android:text="@string/OnThird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/button"
        android:elevation="2dp"
        style="@android:style/Widget.Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:onClick="onBtThirdClick"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/OnCat"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        style="@android:style/Widget.Button"
        android:elevation="1dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_width="wrap_content"
        android:onClick="onBtClick"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/Transmitt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:onClick="onTransmitClick"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:id="@+id/GiftEdit"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/UsetEdit" />

    <TextView
        android:text="@string/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:text="@string/gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/UsetEdit"
        android:layout_toStartOf="@+id/button2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/UsetEdit"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/From"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/From"
        android:layout_below="@+id/GiftEdit"
        android:layout_alignStart="@+id/textView4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/FromEdit"
        android:layout_below="@+id/From"
        android:layout_alignStart="@+id/GiftEdit" />

</RelativeLayout>
